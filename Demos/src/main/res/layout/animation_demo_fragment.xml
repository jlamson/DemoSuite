<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/animation_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/enter_circle_prompt"/>

    <ImageView
        android:id="@+id/animation_circle_view"
        android:layout_width="@dimen/animation_circle_diameter"
        android:layout_height="@dimen/animation_circle_diameter"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/purple_circle"
        />

</FrameLayout>